  <% comment_user = comment.user %>
  <div id="comment-<%= comment.id %>" class="comment-box">
    <div class="comment-box-profile">
      <%= link_to user_path(comment_user) do %>
        <%= attachment_image_tag comment.user, :profile_image, size: "40x40", format: "jpeg",fallback: "no_image.jpg" %>
        <%= comment.user.name %>
      <% end %>
    </div>
    <div class="comment-box-content"><%= comment.tweet_comment %></div>
    <div class="comment-box-time">
      <div><%= l comment.created_at, format: :short %></div>
      <div>
        <% if comment.user == current_user %>
          <%= link_to "", tweet_comment_path(comment.tweet, comment), method: :delete, remote: true, class:"glyphicon glyphicon-trash" %>
        <% end %>        
      </div>
    </div>
  </div>
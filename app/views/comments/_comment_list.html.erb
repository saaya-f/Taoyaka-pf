<table class="table">
  <% comments.each do |comment| %>
    <% comment_user = comment.user %>
      <tr>
        <td>
          <%= link_to user_path(comment_user) do %>
            <%= attachment_image_tag comment.user, :profile_image, size: "40x40", format: "jpeg",fallback: "no_image.jpg" %>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td>
          <%= comment.tweet_comment %>
        </td>
        <td>
          <%= l comment.created_at, format: :short %>
        </td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to "", tweet_comment_path(comment.tweet, comment), method: :delete, remote: true, class:"glyphicon glyphicon-trash" %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>


<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h2 class="titlebar">新規会員登録</h2>
    
      <%= link_to 'ゲストログイン（閲覧用）はこちら', users_guest_sign_up_path, method: :post, class:"guest-login-link" %>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field row'>
          <label class="user-name"><span class="required">必須</span> ニックネーム</label>
          <%= f.text_field :name, placeholder:"ニックネームを入力してください", class:"col-xs-12"%>
        </div>
        <div class="field row">
          <label class="user-email"><span class="required">必須</span> メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを入力してください", class:"col-xs-12" %>
        </div>
        <div class="field row">
          <label class="user-password"><span class="required">必須</span> パスワード</label>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワードを入力してください", class:"col-xs-12" %>
          <% if @minimum_password_length %>
            <p>※ <%= @minimum_password_length %> 文字以上を入力してください</p>
          <% end %>
        </div>
        <div class="field row">
           <label class="user-password"><span class="required">必須</span> パスワード（確認）</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"確認のため、もう一度ご入力ください", class:"col-xs-12" %>
        </div>
        <div class="actions row">
          <%= f.submit "新規登録する", class:"btn btn-success btn-block" %>
        </div>
      <% end %>
      <div class="user-show-link"><%= render "devise/shared/links" %></div>
  </div>
</div>


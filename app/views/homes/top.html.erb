<!--新規投稿部分 ここから-->
<div class="row">
  <div class="main">
    <div class="main-label"> 新着投稿</div>
    <div class="main-tweet-list">
      <table class="table">
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= attachment_image_tag tweet.user, :profile_image, size: "50x50", format: "jpeg", fallback: "no_image.jpg" %></td>
            <td><%= tweet.user.name %></td>
            <td><%= tweet.title %></td>
            <td><%= truncate((tweet.body), length: 15) %></td>
            <td class="favorite-btn">
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
              <%= tweet.favorites.count %>
            </td>
            <td class="comment-sum">
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
              <%= tweet.comments.count %>
            </td>
            <td>
              <!--lメソッドで現地時間に対応-->
              <%= l tweet.created_at %>
            </td>
          </tr>
      <% end %>
      </table>
    </div>
    <div class="main-link">
      <% unless user_signed_in? %>
        <%= link_to "続きをみるにはこちらから →", new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>
<!--新規投稿部分 ここまで-->


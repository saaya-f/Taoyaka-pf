<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h3 class="titlebar"> 投稿内容編集フォーム</h2>
      <%= form_with model: @tweet, local:true do |f| %>
        <%= render "layouts/error", obj: f.object %>
        <div class="field row">
          <label class="tweet-title"><span class="required">必須</span> タイトル</label>
          <%= f.text_area :title, class:"col-xs-12", rows:"2", autofocus: "true" %>
        </div>
        <div class="field row">
          <label class="tweet-body"><span class="required">必須</span> 投稿内容</label>
          <%= f.text_area :body, class:"col-xs-12", rows:"10" %>
        </div>
        <div class="actions row">
          <%= f.submit "編集内容を保存する", class:"btn btn-success col-xs-12" %>
        </div>
      <% end %>
    <div class="text-right">
      <%= link_to "投稿一覧へ戻る", tweets_path %>
    </div>
  </div>
</div>

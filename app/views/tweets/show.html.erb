<div class="row">
  <div class="col-xs-3">
    <h3 class="titlebar"> 投稿する</h3>
      <%= render 'tweets/tweet_form', tweet: @tweet_new %>
    <h3 class="titlebar"> Profile</h3>
      <%= render "users/profile", user: @user %>
  </div>
  <div class="col-xs-9">
    <h3 class="titlebar"> みんなの反応</h3>
      <table class="table">
        <head>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>内容</th>
            <th>いいね</th>
            <th>コメント</th>
          </tr>
        </head>
        <body>
          <tr>
            <td>
              <%= link_to user_path(@tweet.user) do %>
              <%= attachment_image_tag @tweet.user, :profile_image, size: "50x50", format: "jpeg", fallback: "no_image.jpg" %>
              <%= @tweet.user.name %>
              <% end %>
            </td>
            <td><%= @tweet.title %></td>
            <td><%= @tweet.body %></td>
            <td><%= render "favorites/favorite_btn", tweet: @tweet %></td>
            <td>コメント数<%= @tweet.comments.count %></td>
            <% if @tweet.user == current_user %>
              <td><%= link_to "編集", edit_tweet_path, class:"btn-sm btn-info" %></td>
              <td><%= link_to "削除", tweet_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </body>
      </table>
      <table class="table">
        <% @comments.each do |comment| %>
          <% comment_user = comment.user %>
            <tr>
              <td>
                <%= link_to user_path(comment_user) do %>
                  <%= attachment_image_tag comment.user, :profile_image, size: "40x40", format: "jpeg",fallback: "no_image.jpg" %>
                  <%= comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= comment.tweet_comment %>
              </td>
              <td>
                <%= comment.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                <% if comment.user == current_user %>
                  <%= link_to "削除", tweet_comment_path(comment.tweet, comment), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-xs btn-danger" %>
                <% end %>
              </td>
            </tr>
        <% end %>
      </table>
      
      <div class="text-center">
        <%= paginate @comments %>
      </div>
      
      <%= form_with(model:[@tweet, @comment], local: true) do |f| %>
        <div class="row">
          <%= f.text_area :tweet_comment, rows: "5", placeholder: "コメントを書いて反応してあげましょう！", class:"col-xs-12" %>
        </div>
        <div class="text-right">
          <%= f.submit "送信する", class:"btn btn-xs btn-primary" %>          
        </div>
      <% end %>
  </div>
</div>


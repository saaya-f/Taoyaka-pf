<div class="row">
  <div class="col-xs-3">
    <h2>新規投稿</h2>
      <%= render 'tweets/tweet_form', tweet: @tweet %>
    <h2>プロフィール</h2>
      <%= render "users/profile", user: @user %>
  </div>
  <div class="col-xs-9">
    <h2>投稿詳細</h2>
      <table>
        <head>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>内容</th>
            <th>いいね</th>
          </tr>
        </head>
        <body>
            <tr>
              <td>
                <%= link_to user_path(@tweet.user) do %>
                <%= attachment_image_tag @tweet.user, :profile_image, size: "50x50", format: "jpeg", fallback: "no_image.jpg" %>
                <%= @tweet.user.name %>
                <% end %>
              </td>
              <td><%= @tweet.title %></td>
              <td><%= @tweet.body %></td>
              <td></td>
              <td></td>
              <% if @tweet.user == current_user %>
                <td><%= link_to "編集", edit_tweet_path, class:"btn-sm btn-info" %></td>
                <td><%= link_to "削除", tweet_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn-sm btn-danger" %></td>
              <% end %>
            </tr>
        </body>
      </table>
  </div>
</div>


<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h3 class="titlebar"> プロフィール編集フォーム</h3>
      <%= form_with model: @user, local:true do |f| %>
        <%= render "layouts/error", obj: f.object %>
        <div class="field">
          <label class="user-image"> プロフィール画像</label>
          <%= attachment_image_tag @user, :profile_image, class:"plf-img", size: "200x200", format: "jpeg", fallback: "no_image.jpg" %>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="field row">
          <label class="user-name"><span class="required">必須</span> ニックネーム</label>
          <%= f.text_field :name, class:"col-xs-12", placeholder: "名前を入力してください", autofocus: "true" %>
        </div>
        <div class="field row">
          <label class="user-email"><span class="required">必須</span> メールアドレス</label>
          <%= f.email_field :email, class:"col-xs-12", placeholder: "メールアドレスを入力してください" %>
        </div>
        <div class="field row">
          <label class="user-age"><span class="required">必須</span> 年齢</label><br>
          <%= f.select :age, User.ages.keys.map {|k| [k, k]}, {}, { class: "col-xs-4", data: {} } %>
        </div>
        <div class="field row">
          <label class="user-work"><span class="required">必須</span> 職業</label><br>
          <%= f.select :work, User.works.keys.map {|k| [k, k]}, {}, { class: "col-xs-4", data: {} } %>
        </div>
        <div class="field row">
          <%= f.label "自己紹介文" %>
          <%= f.text_area :introduction, class:"col-xs-12 user_introduction", rows: "5", placeholder: "自己紹介も兼ねて、自分のことを知ってもらいましょう！" %>
        </div>
        <div class="actions row">
          <%= f.submit "編集内容を保存する", class:"col-xs-6 btn btn-success col-xs-12" %>
        </div>
      <% end %>
    <div class="out-btn">
      <%= link_to "退会する", out_users_path, class:"col-xs-6 col-xs-offset-3 btn btn-danger" %>
    </div>
  </div>
</div>
